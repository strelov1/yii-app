{% extends "@blog/views/layouts/base.twig" %}

{% block content %}
    {{ use('yii/widgets/ActiveForm') }}
    <div class="site-login">
        <h1>{{ this.title }}</h1>

        <p>Please fill out the following fields to login:</p>

        <div class="row">
            <div class="col-lg-5">
                {% set form = active_form_begin({
                    'id' : 'login-form'
                }) %}
                    {{ form.field(model, 'username').textInput({'autofocus' : true}) | raw }}
                    {{ form.field(model, 'password').passwordInput({'autofocus' : true}) | raw }}
                    {{ form.field(model, 'rememberMe').checkbox() | raw }}

                    <div style="color:#999;margin:1em 0">
                        If you forgot your password you can
                        {{ html.a('reset it', {0 : 'site/request-password-reset'}) | raw }}
                    </div>

                    <div class="form-group">
                        {{ html.submitButton('Login', {'class' : 'btn btn-primary', 'name' : 'login-button'}) | raw }}
                    </div>

                {{  active_form_end() }}
            </div>
        </div>
    </div>
{% endblock %}